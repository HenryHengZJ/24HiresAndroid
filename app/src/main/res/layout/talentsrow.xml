<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cardview"
        app:cardBackgroundColor="@android:color/background_light">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/Rlayout"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/postImage"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/profilebg3" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@drawable/star_rating"
                    android:id="@+id/ratingstar"
                    android:layout_alignParentBottom="false"
                    android:layout_toRightOf="@+id/postImage"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reviewstar"
                    android:layout_toRightOf="@+id/ratingstar"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorRate"
                    android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reviewcount"
                    android:layout_toRightOf="@+id/reviewstar"
                    android:layout_alignTop="@+id/ratingstar"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/postTitle"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="14sp"
                    android:textColor="@color/cast_intro_overlay_background_color"
                    android:layout_alignParentTop="false"
                    android:layout_marginTop="10dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/datesval1"
                    android:layout_alignLeft="@+id/ratingstar"
                    android:layout_alignStart="@+id/ratingstar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/datesval1"
                    android:fontFamily="sans-serif-light"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentBottom="false"
                    android:textColor="@color/colorShortList"
                    android:textStyle="normal|bold"
                    android:layout_alignStart="@+id/ratingstar"
                    android:layout_below="@+id/ratingstar"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/datesval2"
                    android:fontFamily="sans-serif"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentBottom="false"
                    android:textColor="@color/colorShortList"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/datesval1"
                    android:layout_below="@+id/ratingstar"
                    android:paddingTop="1dp"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratesval"
                    android:fontFamily="sans-serif-light"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorSplash"
                    android:textStyle="normal|bold" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>