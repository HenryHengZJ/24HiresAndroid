<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zjheng.jobseed.jobseed.MainActivity"
    android:background="@android:color/background_dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/loginphoto1_blurred"
        android:id="@+id/imageView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cast_expanded_controller_bg_gradient_light"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="51dp"
            android:id="@+id/textView3"
            android:textColor="@android:color/background_light"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"
            android:textStyle="normal|bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="105dp"
                android:src="@drawable/defaultprofile_pic"
                android:layout_height="105dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFFFF"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:layout_marginTop="20dp" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/editbtn"
                android:id="@+id/aboutaddBtn"
                android:background="@drawable/whitecircle_bg"
                android:scaleType="fitCenter"
                android:layout_marginRight="131dp"
                android:layout_marginEnd="131dp"
                android:layout_alignBottom="@+id/profile_image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="10dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_person_white_24dp"
                    android:id="@+id/imageView5"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginLeft="19dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/imageView6"
                    app:srcCompat="@drawable/circle_transparent_btn"
                    android:alpha="0.3" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:textColorHint="@android:color/background_light"
                    android:id="@+id/nameField1"
                    android:textColor="@android:color/background_light"
                    android:fontFamily="sans-serif-light"
                    android:hint="Name"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:textColorLink="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView5" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:textColorHint="@android:color/background_light"
                    android:id="@+id/emailField1"
                    android:textColor="@android:color/background_light"
                    android:fontFamily="sans-serif-light"
                    android:hint="Email"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_toRightOf="@+id/imageView10"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/circle_transparent_btn"
                    android:id="@+id/imageView8"
                    android:alpha="0.3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_email_black_24dp"
                    android:id="@+id/imageView10"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginLeft="19dp"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textColorHint="@android:color/background_light"
                    android:id="@+id/passwordField1"
                    android:textColor="@android:color/background_light"
                    android:fontFamily="sans-serif-light"
                    android:hint="Password"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_toRightOf="@+id/imageView9"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/circle_transparent_btn"
                    android:id="@+id/imageView11"
                    android:alpha="0.3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_vpn_key_white_24dp"
                    android:id="@+id/imageView9"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="19dp"
                    android:layout_marginLeft="19dp"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:layout_height="60dp"
        app:srcCompat="@mipmap/ic_arrow_back_white_24dp"
        android:id="@+id/backBtn"
        android:background="@android:color/transparent"
        android:layout_width="60dp" />


    <Button
        android:text="CREATE PROFILE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerBtn"
        android:background="@drawable/circle_transparent_btn"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true" />

    <com.theartofdev.edmodo.cropper.CropImageView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cropGuidelines="on"
        app:cropShape="oval"
        app:cropFixAspectRatio="true"
        app:cropBorderLineColor="@android:color/holo_red_dark"
        app:cropGuidelinesColor="@android:color/holo_green_dark"
        app:cropBorderLineThickness="5dp"/>


</RelativeLayout>
