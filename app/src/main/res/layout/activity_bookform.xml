<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shadowColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:text="Talent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="normal|bold"
                        android:textSize="15sp"
                        android:paddingLeft="10dp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:id="@+id/jobcardview"
                        app:cardBackgroundColor="@android:color/background_light"
                        android:clickable="true">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/Rlayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:foreground="?android:attr/selectableItemBackground">

                                <RelativeLayout
                                    android:layout_width="110dp"
                                    android:layout_height="100dp"
                                    android:background="@android:color/transparent"
                                    android:id="@+id/profileLay"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/postImage"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:src="@drawable/profilebg3"
                                        android:layout_alignParentTop="false"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:scaleType="centerCrop"
                                        android:visibility="visible"
                                        app:civ_border_color="#ffffff"
                                        app:civ_border_width="1dp" />

                                </RelativeLayout>

                                <RatingBar
                                    android:id="@+id/ratingstar"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="false"
                                    android:layout_alignTop="@+id/profileLay"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_toRightOf="@+id/profileLay"
                                    android:isIndicator="true"
                                    android:numStars="1"
                                    android:rating="1"
                                    android:scaleX="0.8"
                                    android:scaleY="0.8"
                                    android:stepSize="1"
                                    android:theme="@style/RatingBar" />

                                <TextView
                                    android:id="@+id/reviewstar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="false"
                                    android:layout_alignTop="@+id/profileLay"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_toRightOf="@+id/ratingstar"
                                    android:textColor="@color/colorRate"
                                    android:textSize="14sp"
                                    android:textStyle="normal|bold" />

                                <TextView
                                    android:id="@+id/reviewcount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="false"
                                    android:layout_alignTop="@+id/profileLay"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_toRightOf="@+id/reviewstar"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/postTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="false"
                                    android:layout_below="@+id/ratingstar"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_toRightOf="@+id/profileLay"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:paddingRight="30dp"
                                    android:textColor="@color/colorPrssed"
                                    android:textSize="14sp"
                                    android:textStyle="normal|bold" />

                                <TextView
                                    android:id="@+id/postDescrip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="false"
                                    android:layout_below="@+id/postTitle"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_toRightOf="@+id/profileLay"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:paddingRight="10dp"
                                    android:textColor="@color/cast_intro_overlay_background_color"
                                    android:textSize="14sp" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:text="Dates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:fontFamily="sans-serif-light"
                        android:layout_weight="1"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp"
                        android:textStyle="normal|bold"
                        android:paddingLeft="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/post_calendar5"
                            android:layout_weight="1"
                            android:padding="7dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:layout_width ="match_parent"
                                android:layout_height ="wrap_content"
                                android:inputType="none"
                                android:hint ="Tap to select dates of booking"
                                android:background="@drawable/post_edittext_bg"
                                android:scrollHorizontally="false"
                                android:id="@+id/postDate"
                                android:textColor="@color/bodyTextColor"
                                android:gravity="top|center_vertical"
                                android:paddingTop="10dp"
                                android:lineSpacingExtra = "5dp"
                                android:paddingBottom="10dp"
                                android:textSize="16sp"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                android:paddingRight="50dp"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical" />

                            <ImageButton
                                android:layout_width="50dp"
                                app:srcCompat="@drawable/ic_dialog_close_light"
                                android:id="@+id/cleardateBtn"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:layout_height="40dp"
                                android:layout_gravity="right|center_vertical"
                                android:layout_alignParentRight="true"
                                android:alpha="0.7"
                                android:layout_centerVertical="true" />

                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">


                    <TextView
                        android:text="Venue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:fontFamily="sans-serif-light"
                        android:layout_weight="1"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp"
                        android:textStyle="normal|bold"
                        android:paddingLeft="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/profile_location"
                            android:id="@+id/imageView34"
                            android:layout_weight="1"
                            android:padding="7dp" />

                        <EditText
                            android:layout_width ="match_parent"
                            android:layout_height ="wrap_content"
                            android:inputType="none|textMultiLine|textNoSuggestions"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint ="Tap to select venue"
                            android:background="@drawable/post_edittext_bg"
                            android:scrollHorizontally="false"
                            android:id="@+id/postLocation"
                            android:textColor="@color/bodyTextColor"
                            android:gravity="top|center_vertical"
                            android:paddingTop="10dp"
                            android:lineSpacingExtra = "5dp"
                            android:paddingBottom="10dp"
                            android:textSize="16sp"
                            android:paddingLeft="10dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:text="Payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:fontFamily="sans-serif-light"
                        android:layout_weight="1"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="normal|bold"
                        android:textSize="15sp"
                        android:paddingLeft="10dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:text="Num of Days"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/numoftxt"
                                android:textSize="16sp"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/bodyTextColor"
                                android:layout_weight="1" />

                            <EditText
                                android:layout_width ="match_parent"
                                android:layout_height ="wrap_content"
                                android:inputType="number"
                                android:hint ="e.g: 10"
                                android:background="@drawable/post_edittext_bg"
                                android:scrollHorizontally="false"
                                android:id="@+id/postNumDates"
                                android:textColor="@color/bodyTextColor"
                                android:paddingTop="10dp"
                                android:maxLength="20"
                                android:lineSpacingExtra = "5dp"
                                android:paddingBottom="10dp"
                                android:textSize="16sp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="right|center_vertical"
                                android:layout_weight="1"
                                android:imeOptions="actionNext" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:clickable="false"
                            android:id="@+id/hoursLay">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="Num of Hours / Day"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/bodyTextColor"
                                    android:layout_weight="1" />

                                <EditText
                                    android:layout_width ="match_parent"
                                    android:layout_height ="wrap_content"
                                    android:inputType="number"
                                    android:hint ="e.g: 8"
                                    android:background="@drawable/post_edittext_bg"
                                    android:scrollHorizontally="false"
                                    android:id="@+id/postHours"
                                    android:textColor="@color/bodyTextColor"
                                    android:paddingTop="10dp"
                                    android:maxLength="2"
                                    android:lineSpacingExtra = "5dp"
                                    android:paddingBottom="10dp"
                                    android:textSize="16sp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="right|center_vertical"
                                    android:layout_weight="1"
                                    android:imeOptions="actionNext" />
                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:text="Basic Pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bodyTextColor"
                                android:textSize="16sp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:id="@+id/basicpaytxt" />

                            <EditText
                                android:layout_width ="match_parent"
                                android:layout_height ="wrap_content"
                                android:inputType="number|numberDecimal"
                                android:hint ="e.g: 100.00"
                                android:background="@drawable/post_edittext_bg"
                                android:scrollHorizontally="false"
                                android:id="@+id/postBasicPay"
                                android:textColor="@color/bodyTextColor"
                                android:paddingTop="10dp"
                                android:maxLength="20"
                                android:lineSpacingExtra = "5dp"
                                android:paddingBottom="10dp"
                                android:textSize="16sp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="right|center_vertical"
                                android:layout_weight="1"
                                android:imeOptions="actionNext" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginTop="10dp">

                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/spinnerrate"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1" />

                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/spinnercurrency"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1" />
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorLightGray"
                            android:layout_marginTop="10dp">

                        </RelativeLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:text="Total Basic Pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/bodyTextColor"
                                android:layout_weight="1" />

                            <EditText
                                android:layout_width ="match_parent"
                                android:layout_height ="wrap_content"
                                android:inputType="number|numberDecimal"
                                android:scrollHorizontally="false"
                                android:id="@+id/postTotalBasicPay"
                                android:textColor="@color/colorAccent"
                                android:paddingTop="10dp"
                                android:lineSpacingExtra = "5dp"
                                android:paddingBottom="10dp"
                                android:textSize="16sp"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center_vertical"
                                android:enabled="false"
                                android:gravity="right|center_vertical"
                                android:layout_weight="1"
                                android:textStyle="normal|bold"
                                android:clickable="false" />


                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <ImageButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:id="@+id/imageButton3"
                                android:background="@drawable/addbtn_blue"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:text="Tips / Commision"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bodyTextColor"
                                android:textSize="16sp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp" />

                            <EditText
                                android:layout_width ="match_parent"
                                android:layout_height ="wrap_content"
                                android:inputType="number"
                                android:hint ="e.g: 10"
                                android:background="@drawable/post_edittext_bg"
                                android:scrollHorizontally="false"
                                android:id="@+id/postTipsPay"
                                android:textColor="@color/bodyTextColor"
                                android:paddingTop="10dp"
                                android:maxLength="20"
                                android:lineSpacingExtra = "5dp"
                                android:paddingBottom="10dp"
                                android:textSize="16sp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="right|center_vertical"
                                android:layout_weight="1"
                                android:imeOptions="actionNext" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorLightGray">

                        </RelativeLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:text="Total Pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/bodyTextColor"
                                android:layout_weight="1" />

                            <EditText
                                android:layout_width ="match_parent"
                                android:layout_height ="wrap_content"
                                android:inputType="none"
                                android:scrollHorizontally="false"
                                android:id="@+id/postTotalAllPay"
                                android:textColor="@color/colorAccent"
                                android:paddingTop="10dp"
                                android:lineSpacingExtra = "5dp"
                                android:paddingBottom="10dp"
                                android:textSize="16sp"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center_vertical"
                                android:enabled="false"
                                android:gravity="right|center_vertical"
                                android:layout_weight="1"
                                android:textStyle="normal|bold"
                                android:clickable="false" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:text="Payment Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="normal|bold"
                        android:textSize="15sp"
                        android:paddingLeft="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/post_wages2"
                            android:layout_weight="1"
                            android:padding="7dp" />

                        <EditText
                            android:layout_width ="match_parent"
                            android:layout_height ="wrap_content"
                            android:hint ="e.g: 3 Days After Task Completed"
                            android:background="@drawable/post_edittext_bg"
                            android:scrollHorizontally="false"
                            android:id="@+id/postPaymentDate"
                            android:textColor="@color/bodyTextColor"
                            android:gravity="top|center_vertical"
                            android:paddingTop="10dp"
                            android:lineSpacingExtra = "5dp"
                            android:paddingBottom="10dp"
                            android:textSize="16sp"
                            android:textColorLink="@android:color/white"
                            android:inputType="none"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="60dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:text="Additional Note (Optional)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:fontFamily="sans-serif-light"
                        android:layout_weight="1"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp"
                        android:textStyle="normal|bold"
                        android:paddingLeft="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:layout_width ="match_parent"
                            android:layout_height ="wrap_content"
                            android:inputType="text|textCapSentences|textMultiLine"
                            android:hint ="e.g: Audience / Time frame"
                            android:background="@drawable/post_edittext_bg"
                            android:scrollHorizontally="false"
                            android:id="@+id/postAddNote"
                            android:textColor="@color/bodyTextColor"
                            android:gravity="top|center_vertical"
                            android:paddingTop="10dp"
                            android:lineSpacingExtra = "5dp"
                            android:paddingBottom="10dp"
                            android:textSize="16sp"
                            android:imeOptions="actionDone"
                            android:paddingLeft="10dp"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/hireCardView"
        android:visibility="gone">

        <TextView
            android:text="BOOK NOW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView28"
            android:padding="15dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:textColor="@color/buttonTextColor"
            android:background="@color/colorGreen" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/updateCardView"
        android:visibility="gone">

        <TextView
            android:text="UPDATE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:textColor="@color/buttonTextColor"
            android:background="@drawable/applyfilterbtn" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
