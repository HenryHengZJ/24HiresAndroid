<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="6dp">

        <RelativeLayout
            android:id="@+id/Rlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/postpoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:text="700 Points"
                android:textColor="@color/colorRate"
                android:textSize="14sp"
                android:textStyle="normal|bold" />

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:layout_below="@+id/postpoints"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/starbucks" />

            <TextView
                android:id="@+id/posttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postImage"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginBottom="5dp"
                android:text="Get RM5 Off on Any Drinks"
                android:textColor="@color/com_facebook_button_background_color_focused_disabled"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/posttitle"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:padding="10dp"
                android:text="Purchase"
                android:textColor="@color/calendar_text_selected"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>