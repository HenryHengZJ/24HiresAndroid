<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@color/buttonTextColor">

    <TextView
        android:text="Please rate your satisfaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:id="@+id/textView1"
        android:textSize="16sp"
        android:textColor="@color/bodyTextColor"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="normal|bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:id="@+id/wages_cardview"
        app:cardMaxElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="0.8"
                android:scaleX="0.8"
                android:numStars="5"
                android:stepSize="1"
                android:theme="@style/RatingBar"
                android:isIndicator="false"
                android:id="@+id/userratingbar"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_marginBottom="5dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:text="Comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:id="@+id/textView35"
        android:textSize="16sp"
        android:textColor="@color/bodyTextColor"
        android:padding="10dp"
        android:gravity="center"
        android:textStyle="normal|bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textMultiLine|textPersonName"
            android:ems="10"
            android:id="@+id/reviewtxt"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:hint="Write your review here.."
            android:background="@drawable/tickbox_bg"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:maxLines="12" />
    </android.support.v7.widget.CardView>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
        android:layout_marginBottom="10dp">

    <Button
        android:text="CANCEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelBtn"
        android:background="@android:color/transparent"
        android:textColor="@android:color/holo_red_light"
        android:layout_weight="1" />

    <Button
        android:text="SUBMIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postBtn"
        android:background="@android:color/transparent"
        android:textColor="@color/colorAdd"
        android:layout_weight="1" />
</LinearLayout>

</LinearLayout>