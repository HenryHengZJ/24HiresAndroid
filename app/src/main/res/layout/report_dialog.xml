<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:id="@+id/spamcardview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/spamicon"
            android:id="@+id/imageView17"
            android:scaleType="fitCenter"
            android:layout_marginLeft="20dp" />

        <TextView
            android:text="Spam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recenttxt"
            android:visibility="visible"
            android:background="@android:color/white"
            android:textColor="@color/bodyTextColor"
            android:layout_toRightOf="@+id/imageView17"
            android:textSize="16sp"
            android:paddingLeft="20dp"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/cardview_shadow_start_color">

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:id="@+id/irrelavantcardview">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/inappropriateicon"
                android:id="@+id/imageView171"
                android:scaleType="fitCenter"
                android:layout_marginLeft="20dp" />

            <TextView
                android:text="Irrelevant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/irrelavanttxt"
                android:visibility="visible"
                android:background="@android:color/white"
                android:textColor="@color/bodyTextColor"
                android:layout_toRightOf="@+id/imageView171"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:layout_centerInParent="false"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/cardview_shadow_start_color">

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:id="@+id/inappropriatecardview">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/irrelavant"
                android:id="@+id/imageView181"
                android:scaleType="fitCenter"
                android:layout_marginLeft="20dp" />

            <TextView
                android:text="Inappropriate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inappropriatetxt"
                android:visibility="visible"
                android:background="@android:color/white"
                android:textColor="@color/bodyTextColor"
                android:layout_toRightOf="@+id/imageView181"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:layout_centerInParent="false"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/cardview_shadow_start_color">

    </RelativeLayout>

</LinearLayout>